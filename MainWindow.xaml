<Window x:Class="p1_ap1_wilkins_20170289.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:p1_ap1_wilkins_20170289"
        mc:Ignorable="d"
        Title="Menu Prinicipal" Height="450" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
            <Label Content="MENU PRINICIPAL" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,100,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="70">
            <Button x:Name="RegistrarButton" Click="RegistrarButton_Click">
                <StackPanel Orientation="Vertical">
                    <Image Height="25" Source="/Resources/Nuevo.png"/>
                    <Label Content="Registrar Aporte" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <Button x:Name="ConsutarButton" Click="ConsultarButton_Click" Margin="48,0,0,0">
                <StackPanel Orientation="Vertical">
                    <Image Height="25" Source="/Resources/Buscar.png"/>
                    <Label Content="Consutar Aporte" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
